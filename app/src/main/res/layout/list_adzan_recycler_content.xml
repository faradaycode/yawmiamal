<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ls_adzan_parent"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rv_nama_adzan_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Adzan"
        android:textStyle="bold"
        android:textColor="#252228"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/rv_waktu_adzan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00"
        android:textSize="20sp"
        android:textColor="#252228"
        android:layout_gravity="center_vertical"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/bt_notif_on"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_notifications_active"/>

    <ImageView
        android:id="@+id/bt_notif_of"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_notifications_off" />

</LinearLayout>